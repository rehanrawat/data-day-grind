<%- include("partials/header") -%>
<h1>Patient Details</h1>
<hr>
<form action="/patient_details" method="post">
    <div class="form-group">
        <h3>Personal Details</h3>
        <label>Patient Name</label>
        <input class="form-control" type="text" name="patient_name">
        <label>Alloted Room and Bed</label>
        <input class="form-control" type="text" name="patient_loc">
        <label>Patient Address</label>
        <input class="form-control" type="text" name="patient_address">
        <label>Patient Phone Number</label>
        <input class="form-control" type="text" name="patient_number">
        <label>Patient Gurdian's Phone Number</label>
        <input class="form-control" type="text" name="patient_number2">
    </div>  
    <div class="form-group">
        <h3>Medications</h3>
        <label>Prescribed Medicines</label>
        <textarea class="form-control" name="medication" id="" cols="150" rows="10"></textarea>
    </div>    
    <div class="form-group">
        <h3>Therapy</h3>
        <label>Suggested Therepies</label>
        <textarea class="form-control" name="therapy" id="" cols="150" rows="10"></textarea>
    </div>
    <div class="form-group">
        <h3>Doctor's Suggestion</h3>
        <textarea class="form-control" name="suggestion" id="" cols="150" rows="10"></textarea>
    </div>
    
    <button class="btn btn-primary" type="submit" name="button">Submit</button>
</form>

<%- include("partials/footer") -%>